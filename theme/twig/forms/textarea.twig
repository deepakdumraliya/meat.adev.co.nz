{#
	Displays a textarea
	- Required:
		- label: A label for the textarea
	- Optional:
		- usePlaceholder: Whether to use a placeholder for the label
		- wrapperClasses: Classes to apply to the wrapper's element
		- error: An error to display
		- name: The name to give to the element
		- value: The default value for the textarea
		- required: Whether the textarea is required
		- classes: Classes to apply to the input
		- attributes: Extra attributes to apply to the textarea
#}
{% embed (usePlaceholder ? "forms/base/bare-field.twig" : "forms/base/labelled-field.twig") %}
	{% block field %}
		<textarea
			{% if name is defined %} name="{{ name }}" {% endif %}
			{% if required %} required="required" {% endif %}
			class="{{ classes }}"
			{{ attributes|raw }}
			{% if usePlaceholder %}
				placeholder="{{ label }}"
				title="{{ label }}"
			{% endif %}
		>{{ value }}</textarea>
	{% endblock %}
{% endembed %}